@model GroupFindViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <title>Group find</title>
</head>
<body>
    <partial name="Header" />
    <h3 style="text-align:center">Please select group</h3>
    <form asp-controller="Home" asp-action="GroupSchedule" method="post" style="text-align:center">
        <input type="text" list="groupList" placeholder="Select group" oninput="getEntitiesByPartName(this.value,'group')" id="inputedName" name="inputedName" autocomplete="off" />
        <input type="submit" value="Show schedule" />
        <datalist id="groupList" />
    </form>
</body>

</html>
<script type="text/javascript">
    function getEntitiesByPartName(name, entityName) {
        $.ajax({
            url: "https://api.rozklad.org.ua/v2/" + entityName + "s/?search={'query':'" + name.toString().trim() + "'}",
            type: 'GET',
            contentType: "application/json",
            success: function (root) {
                var list = $("#" + entityName + "List");
                list.empty();                
                $.each(root.data, function (index, entity) {
                    var option = document.createElement('option');
                    if (entityName == "group")
                        option.value = entity.group_full_name.toUpperCase();
                    else if (entityName == "teacher")
                        option.value = entity.teacher_full_name;
                    list.append(option);
                })
            }
        });
    }
</script>
}