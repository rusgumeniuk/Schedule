@model IEnumerable<ResponseTeacherData>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TeacherFind</title>
</head>
<body>
    @Html.Partial("Header")
    <h3 style="text-align:center">Select a teacher</h3>
    <form asp-controller="Home" asp-action="TeacherSchedule" method="post" style="text-align:center" >
        <select name="id">
            @foreach (ResponseTeacherData teacher in Model)
            {
                <option value=@teacher.Id>@teacher.FullName</option>
            }
        </select>
        <input type="submit" value="Show schedule" />
    </form>
</body>
</html>
